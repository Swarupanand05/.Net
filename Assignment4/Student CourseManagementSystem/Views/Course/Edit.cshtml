@model StudentCourseManagementSystem.Models.Course

<html>
<head>
    <title>Edit Course</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body>
    <h2>Edit Course: @Model.CourseName</h2>

    <form action="/Course/AfterEdit" method="post">
        <input type="hidden" name="CourseId" value="@Model.CourseId" />

        <table class="table">

            <tr>
                <td>Course Name</td>
                <td><input type="text" name="CourseName" value="@Model.CourseName" class="form-control" required /></td>
            </tr>

            <tr>
                <td>Assign to Student</td>
                <td>
                    <select name="StudentId" class="form-control" required>
                        <option value="">-- Select Student --</option>
                        @foreach (var student in ViewBag.StudentList)
                        {
                            <option value="@student.Value" selected="@(Model.StudentId == int.Parse(student.Value) ? "selected" : null)">
                                @student.Text
                            </option>
                        }
                    </select>
                </td>
            </tr>

            <tr>
                <td>
                    <button type="submit" class="btn btn-warning">Save Changes</button>
                    <a href="/Course/Index" class="btn btn-secondary">Cancel</a>
                </td>
            </tr>
        </table>
    </form>
</body>
</html>